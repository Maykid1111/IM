<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical"
        android:id="@+id/layout_4"
        >
        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@mipmap/touxiang"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            android:foreground="?selectableItemBackground"
            >
        </ImageView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/textView_id"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:text="loading..."
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:textSize="25sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:drawableLeft="@mipmap/id"
                android:drawablePadding="6dp"
                android:foreground="?selectableItemBackground"
                />

            <TextView
                android:id="@+id/textView_name"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:text="loading..."
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:textSize="25sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:drawableLeft="@mipmap/name"
                android:drawablePadding="6dp"
                android:foreground="?selectableItemBackground"

                />

            <TextView
                android:id="@+id/textView_sex"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:textSize="25sp"
                android:text="loading..."
                android:textAlignment="center"
                android:maxLines="1"
                android:ellipsize="end"
                android:drawableLeft="@mipmap/xingbie1"
                android:drawablePadding="6dp"
                android:foreground="?selectableItemBackground"

                />
            <TextView
                android:id="@+id/textView_email"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:text="loading..."
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textSize="25sp"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:drawableLeft="@mipmap/email1"
                android:drawablePadding="6dp"
                android:foreground="?selectableItemBackground"

                />


        </LinearLayout>
        <Button
            android:id="@+id/send_button"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/ripple_btn_add"
            android:text="发送消息"
            android:textSize="25dp"
            android:shadowColor="@android:color/holo_green_light"
            android:textColor="@android:color/white"
            android:layout_weight="0.5"
            android:elevation="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            >
        </Button>

        <Button
            android:id="@+id/delete_button"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/ripple_btn"
            android:text="删除好友"
            android:textSize="25dp"
            android:shadowColor="@android:color/holo_blue_dark"
            android:textColor="@android:color/white"
            android:onClick="test1"
            android:layout_weight="0.5"
            android:elevation="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            >
        </Button>


    </LinearLayout>




</LinearLayout>