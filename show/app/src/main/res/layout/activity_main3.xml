<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical"
        android:id="@+id/layout"
        >
        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@mipmap/touxiang"
            android:layout_marginTop="70dp"
            android:layout_weight="1"
            >
        </ImageView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:layout_weight="1"

            >
            <TextView
                android:id="@+id/textView_id"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:text="loading..."
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:textSize="25sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:drawableLeft="@mipmap/id"
                android:drawablePadding="6dp"/>

            <TextView
                android:id="@+id/textView_name"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:text="loading..."
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:textSize="25sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:drawableLeft="@mipmap/name"
                android:drawablePadding="6dp"

                />

                <TextView
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:id="@+id/textView_sex"
                    android:gravity="center_vertical"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:drawableLeft="@mipmap/xingbie1"
                    android:drawablePadding="6dp"
                    />








            <TextView
                android:id="@+id/textView_email"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:text="loading..."
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textSize="25sp"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:drawableLeft="@mipmap/email1"
                android:drawablePadding="6dp"
                />
        </LinearLayout>
        <Button
            android:id="@+id/out_button"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/ripple_btn"
            android:text="退出登录"
            android:textSize="30dp"
            android:shadowColor="@android:color/holo_blue_dark"
            android:textColor="@android:color/white"
            android:layout_weight="0.5"
            android:elevation="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            />
    </LinearLayout>
</LinearLayout>